


<h1>Login</h1>



<div class="form-group">
  <%= form_tag '/login' do %>
  <ul class="no-bullets">

    <li class="form-control">
      Email: <%= text_field_tag :email%>
    </li>
    <li class="form-control">
      Password: <%= password_field_tag :password %>
    </li>
    <li class="btn">
    <%= submit_tag "Submit", :class=>"btn btn-danger" %>
    </li>

    <% end %>

  </ul>
</div>


